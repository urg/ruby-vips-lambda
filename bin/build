#!/bin/bash

set -e

IMAGE_NAME=ruby-vips-lambda
VIPS_VERSION=${VIPS_VERSION:=8.8.3}

rm -rf ./share
mkdir ./share

docker build \
  --build-arg VIPS_VERSION=${VIPS_VERSION} \
  -t $IMAGE_NAME .

docker run --rm \
  -v "${PWD}/share:/share" \
  $IMAGE_NAME \
  sh -c "cp /build/share/libvips.zip /share"
